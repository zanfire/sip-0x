<UserControl x:Class="SIPFlowRenderer.Controls.SIPMessageCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="_name" Grid.Row="0" Text="INVITE" Foreground="Gray" TextAlignment="Center" FontSize="12" FontFamily="Monospace" Padding="0" Margin="0" VerticalAlignment="Bottom" TextTrimming="CharacterEllipsis" MaxWidth="120"/>
        <Line x:Name="_line" Grid.Row="1" Stroke="Gray" StrokeDashCap="Flat" StrokeThickness="1"  StrokeEndLineCap="Square"  X1="0" X2="100" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <Path x:Name="_ellipse1" Height="10" Width="10" Fill="Gray" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Stretch="Fill" Data="M0,0 L1,0.5 0,1Z" />
        <Path x:Name="_ellipse2" Height="10" Width="10" Fill="Gray" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Data="M0,0.5 L1,1 1,0Z" Stretch="Fill"/>
    </Grid>
</UserControl>
