<UserControl x:Class="SIPFlowRenderer.Controls.SIPEntity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200" 
             Padding="10,5,10,0">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Top" MouseEnter="_rectangle_MouseEnter" MouseLeave="_rectangle_MouseLeave">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle x:Name="_rectangle" Grid.Row="0" Fill="Gray" RadiusX="0" RadiusY="0" Stroke="Black" StrokeThickness="1"/>
        <TextBlock x:Name="_name" Grid.Row="0" Text="10.0.2.57:5060" TextAlignment="Center" FontSize="16" FontFamily="Monospace" Padding="10"/>
        <Line x:Name="_line" Grid.Row="1" Stroke="Gray" StrokeDashCap="Flat" StrokeThickness="1" StrokeEndLineCap="Square" Y1="0" Y2="100" HorizontalAlignment="Center" VerticalAlignment="Stretch" Stretch="Fill"/>
    </Grid>
</UserControl>
